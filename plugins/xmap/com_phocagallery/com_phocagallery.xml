<?xml version="1.0" encoding="UTF-8"?>
<extension type="plugin" group="xmap" version="1.6" method="upgrade">
    <name>Xmap - Phoca Gallery Plugin</name>
    <author>Dario Pintaric</author>
    <creationDate>May 2012</creationDate>
    <copyright>2012 dblaze.eu All rights reserved</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>dario.pintaric@gmail.com</authorEmail>
    <authorUrl>http://www.dblaze.eu</authorUrl>
    <version>1.0.0</version>
    <description>XMAP plugin for Phoca Gallery Componet!</description>
    <files>
        <filename plugin="com_phocagallery">com_phocagallery.php</filename>
    </files>

    <config>

        <fields name="params">
            <fieldset name="basic">

                <field name="expand_categories" type="list" default="1" label="Show images" description="Show images in categories">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                    <option value="2">Only in XML sitemap</option>
                    <option value="3">Only in Site sitemap</option>
                </field>

                <field name="show_sub_categories" type="list" default="1" label="Show subcategories" description="Show subcategories">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                    <option value="2">Only in XML sitemap</option>
                    <option value="3">Only in Site sitemap </option>
                </field>

                <field name="@spacer" type="spacer" default="" label="XML sitemap" description="XML sitemap options" />

                <field name="cat_priority" type="list" default="-1" label="Category priority" description="Set the categories priority">
                    <option value="-1">Use parent menu settings</option>
                    <option value="0.0">0.0</option>
                    <option value="0.1">0.1</option>
                    <option value="0.2">0.2</option>
                    <option value="0.3">0.3</option>
                    <option value="0.4">0.4</option>
                    <option value="0.5">0.5</option>
                    <option value="0.6">0.6</option>
                    <option value="0.7">0.7</option>
                    <option value="0.8">0.8</option>
                    <option value="0.9">0.9</option>
                    <option value="1">1</option>
                </field>

                <field name="cat_changefreq" type="list" default="-1" label="Category change frequency" description="Set the categories and subcategories chage frequency">
                    <option value="-1">Use parent menu settings</option>
                    <option value="always">Always</option>
                    <option value="hourly">Hourly</option>
                    <option value="daily">Daily</option>
                    <option value="weekly">Weekly</option>
                    <option value="monthly">Monthly</option>
                    <option value="yearly">Yearly</option>
                    <option value="never">Never</option>
                </field>

                <field name="file_priority" type="list" default="-1" label="File priority" description="Set the files priority">
                    <option value="-1">Use parent menu settings</option>
                    <option value="0.0">0.0</option>
                    <option value="0.1">0.1</option>
                    <option value="0.2">0.2</option>
                    <option value="0.3">0.3</option>
                    <option value="0.4">0.4</option>
                    <option value="0.5">0.5</option>
                    <option value="0.6">0.6</option>
                    <option value="0.7">0.7</option>
                    <option value="0.8">0.8</option>
                    <option value="0.9">0.9</option>
                    <option value="1">1</option>
                </field>

                <field name="file_changefreq" type="list" default="-1" label="File change frequency" description="Set the files chage frequency">
                    <option value="-1">Use parent menu settings</option>
                    <option value="always">Always</option>
                    <option value="hourly">Hourly</option>
                    <option value="daily">Daily</option>
                    <option value="weekly">Weekly</option>
                    <option value="monthly">Monthly</option>
                    <option value="yearly">Yearly</option>
                    <option value="never">Never</option>
                </field>

            </fieldset>
        </fields>
    </config>
</extension>