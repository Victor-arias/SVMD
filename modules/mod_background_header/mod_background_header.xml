            <option value="6">MOD_BACKGROUNDHEADER_TRANSITION_OPTION_6</option>
            <option value="7">MOD_BACKGROUNDHEADER_TRANSITION_OPTION_7</option>
        </param>
        <param name="transition_speed" type="text" default="750"
            label="MOD_BACKGROUNDHEADER_FIELD_TRANSITION_SPEED_LABEL"
            description="MOD_BACKGROUNDHEADER_FIELD_TRANSITION_SPEED_DESC"
        />
        <param name="arrow_navigation" type="radio" default="1"
            label="MOD_BACKGROUNDHEADER_FIELD_ARROW_NAVIGATION_LABEL"
            description="MOD_BACKGROUNDHEADER_FIELD_ARROW_NAVIGATION_DESC"
