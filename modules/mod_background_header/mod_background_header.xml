        <filename>index.html</filename>
        <filename module="mod_background_header">mod_background_header.php</filename>
        <filename>mod_background_header.xml</filename>
    </files>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.mod_background_header.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_background_header.sys.ini</language>
        <language tag="es-ES">es-ES/es-ES.mod_background_header.ini</language>
        <language tag="es-ES">es-ES/es-ES.mod_background_header.sys.ini</language>
    </languages>
    <params>
        <param name="slide_path" type="text" size="60"
            label="MOD_BACKGROUNDHEADER_FIELD_SLIDE_PATH_LABEL"
            description="MOD_BACKGROUNDHEADER_FIELD_SLIDE_PATH_DESC"
        />
        <param name="load_jquery" type="radio" default="0"
            label="MOD_BACKGROUNDHEADER_FIELD_LOAD_JQUERY_LABEL"
            description="MOD_BACKGROUNDHEADER_FIELD_LOAD_JQUERY_DESC"
        >
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="autoplay" type="radio" default="1"
            label="MOD_BACKGROUNDHEADER_FIELD_AUTOPLAY_LABEL"
            description="MOD_BACKGROUNDHEADER_FIELD_AUTOPLAY_DESC"
        >
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="height" type="text" default="0"
            label="MOD_BACKGROUNDHEADER_FIELD_MIN_HEIGHT_LABEL"
            description="MOD_BACKGROUNDHEADER_FIELD_MIN_HEIGHT_DESC"
        />
        <param name="width" type="text" default="0"
            label="MOD_BACKGROUNDHEADER_FIELD_MIN_WIDTH_LABEL"
            description="MOD_BACKGROUNDHEADER_FIELD_MIN_WIDTH_DESC"
        />
        <param name="random" type="radio" default="0"
            label="MOD_BACKGROUNDHEADER_FIELD_RANDOM_LABEL"
            description="MOD_BACKGROUNDHEADER_FIELD_RANDOM_DESC"
        >
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="slideshow" type="radio" default="1"
            label="MOD_BACKGROUNDHEADER_FIELD_SLIDESHOW_LABEL"
            description="MOD_BACKGROUNDHEADER_FIELD_SLIDESHOW_DESC"
        >
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="slide_interval" type="text" default="5000"
            label="MOD_BACKGROUNDHEADER_FIELD_SLIDE_INTERVAL_LABEL"
            description="MOD_BACKGROUNDHEADER_FIELD_SLIDE_INTERVAL_DESC"
        />
        <param name="start_slide" type="text" default="1"
            label="MOD_BACKGROUNDHEADER_FIELD_START_SLIDE_LABEL"
            description="MOD_BACKGROUNDHEADER_FIELD_START_SLIDE_DESC"
        />
        <param name="stop_loop" type="radio" default="0"
            label="MOD_BACKGROUNDHEADER_FIELD_STOP_LOOP_LABEL"
            description="MOD_BACKGROUNDHEADER_FIELD_STOP_LOOP_DESC"
        >
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>        
        <param name="transition" type="list" default="1"
            label="MOD_BACKGROUNDHEADER_FIELD_TRANSITION_LABEL"
            description="MOD_BACKGROUNDHEADER_FIELD_TRANSITION_DESC"
        >
            <option value="0">MOD_BACKGROUNDHEADER_TRANSITION_OPTION_0</option>
            <option value="1">MOD_BACKGROUNDHEADER_TRANSITION_OPTION_1</option>
            <option value="2">MOD_BACKGROUNDHEADER_TRANSITION_OPTION_2</option>
